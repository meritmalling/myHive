<%= form_for @hive do |f| %>
  <%= f.text_field :nickname, placeholder: 'hive name' %>
  <%= f.text_field :location, placeholder: 'location by five-digit-zip'%>
  <p style='text-align: center'>please give myHive a valid US zip code so that we may provide local weather for your inspections!<p>
  <%= f.date_select :creation_date, placeholder: 'date of creation'  %>
  <%= f.select :creation_method, [["package", "package"], ["split", "split"], ["swarm", "swarm"]], placeholder: 'creation method' %>
  <%= f.text_field :breed,placeholder: 'breed' %>
  <%= f.select :hive_type, [["langstroth", "langstroth"], ["top-bar", "top-bar"], ["warre", "warre"]], placeholder: 'type' %>
  <%= f.number_field :supers, placeholder: 'number of supers' %>
  <%= f.text_field :notes, placeholder: 'notes' %>
  <%= f.submit 'save hive', :class => 'light-blue lighten-2 btn' %>
<% end %>